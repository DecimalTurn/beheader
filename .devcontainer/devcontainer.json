{
  "name": "Beheader Development Container",
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "oven.bun-vscode",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  // Verify installations after container creation
  "postCreateCommand": "bun --version && ffmpeg -version && convert --version && mp4edit --version && cp /opt/bento4/bin/mp4edit /workspaces/beheader/mp4edit",
  "postStartCommand": "cat /workspaces/.codespaces/.persistedshare/creation.log"
}
